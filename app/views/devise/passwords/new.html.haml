.row
  .col-md-6.col-md-offset-3
    %h2 Forgot Your Password?
    .col-md-12.col-sm-12{style: "padding-left: 0;"}
      = form_for(resource, as: resource_name, url: password_path(resource_name), html:{method: :post, class: :"form-vertical parsley-form"}) do |f|

        %p= resource.errors.full_messages.first

        .form-inputs{style: "margin-top:20px; margin-bottom:20px;"}
          = f.email_field :email, autofocus: true, placeholder: "Your email address", required: true, class: :"form-control input-lg"

        .form-actions
          = f.submit "Send me reset password instructions", class: :"btn btn-warning input-lg"


:javascript
  $(".parsley-form").parsley("validate")
