.modal-dialog
  .modal-content
    = form_for(@vpd, url: dashboard_vpd_vpd_path, remote: true, html:{class: :"form-horizontal parsley-form edit-data"}) do |f|
      .modal-header
        %button.close{type: :"button", aria:{hidden: true}, data:{dismiss: :modal}} Ã—
        %h4.modal-title#data_title Edit VPD

      .modal-body
        .form-group
          = f.label :name, "VPD Name :", class: :"col-sm-4 control-label"
          .col-sm-6
            = f.text_field :name, placeholder: "e.g. Virtual Private Database", required: true, class: :"form-control input-sm"

      .modal-footer
        = button_tag(type: :submit, class: :"btn btn-primary") do
          Save
          %i.fa.fa-angle-double-right
        %button.btn.btn-default{type: :button, data:{dismiss: :modal}} Cancel